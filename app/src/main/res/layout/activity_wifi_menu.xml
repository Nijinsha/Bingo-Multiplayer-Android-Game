<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nijinsha.bingomultiplayer.Wifi_menu"
    android:background="@drawable/bkgd">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:text="BINGO!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#003333" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13" />

        <Button
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:text="Host"
            android:id="@+id/wHost"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0DF259"
            android:textStyle="bold"
            android:background="@drawable/button_cus"
            android:textSize="20dp" />
        <Button
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:text="Join"
            android:id="@+id/wJoin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textColor="#0DF259"
            android:textStyle="bold"
            android:background="@drawable/button_cus"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="This feature is coming soon"
        android:id="@+id/textView36"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />

</RelativeLayout>
